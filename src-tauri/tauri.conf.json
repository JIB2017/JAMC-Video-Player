{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jamc-video-player",
  "version": "0.1.0",
  "identifier": "777",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "jamc-video-player",
        "width": 1280,
        "height": 720,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      
      "assetProtocol": {
        "enable": true,
        "scope": ["G:/Videos/Videos JA/*", "$TEMP/{<jamc_video_player_lib>}/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
